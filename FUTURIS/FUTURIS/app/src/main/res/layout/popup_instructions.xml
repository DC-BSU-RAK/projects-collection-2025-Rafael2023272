<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_box"
    android:padding="24dp">

    <!-- Title -->


    <TextView
        android:id="@+id/instructionsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/wallpoet"
        android:text="INSTRUCTIONS"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/instructionsContent"
        android:layout_width="285dp"
        android:layout_height="500dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/baskervville"
        android:letterSpacing="0.02"
        android:lineSpacingExtra="6dp"
        android:text="1. Tap the 'Start' button to begin creating your capsule.\n\n2. In the Title field, write something memorable (e.g., 'My 2025 Vision').\n\n3. In the Message box, express your hopes, goals, or emotions for your future self.\n\n4. Select the future date when the capsule should unlock.\n\n5. Press 'Save' â€” your capsule is now secured.\n\n6. To view saved capsules, tap 'View Capsules' on the home page.\n\nNote: Capsules remain locked until the unlock date arrives."
        android:textAlignment="center"
        android:textColor="#DDDDDD"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/closeInstructionsBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/instructionsTitle" />

    <Button
        android:id="@+id/closeInstructionsBtn"
        android:layout_width="200dp"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#292929"
        android:fontFamily="@font/wallpoet"
        android:text="GOT IT"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/instructionsContent" />

</androidx.constraintlayout.widget.ConstraintLayout>



