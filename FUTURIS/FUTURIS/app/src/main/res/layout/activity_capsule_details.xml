<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_view"
    android:padding="24dp">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="ifContentScrolls">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvCapsuleTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capsule Title"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvCapsuleDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unlock Date: yyyy-MM-dd"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:layout_marginBottom="24dp" />

            <TextView
                android:id="@+id/tvCapsuleMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full message goes here..."
                android:textSize="18sp"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnBackToStart"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#04012e"
        android:text="Back"
        android:textAllCaps="false"
        android:textColor="@android:color/white" />

</LinearLayout>

