<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/backgroundhow"
    android:padding="24dp">

    <!-- Title -->
    <TextView
        android:id="@+id/popupTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="HOW IT WORKS"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:fontFamily="@font/cinzel_decorative_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Description -->

    <!-- Back Button -->

    <TextView
        android:id="@+id/popupDescription"
        android:layout_width="211dp"
        android:layout_height="250dp"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/alike"
        android:letterSpacing="0.03"
        android:lineSpacingMultiplier="1.2"
        android:text="Zen is a fun creative app that helps you track and calculate your stress level based on various factors, like sleep, tasks, mood, and meals. After entering your details, the app calculates your stress level and shows it visually, giving you personalized feedback and tips."
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/popupTitle" />

    <Button
        android:id="@+id/closePopupBtn"
        android:layout_width="200dp"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="64dp"
        android:backgroundTint="#9f6d51"
        android:fontFamily="@font/cinzel_decorative_bold"
        android:text="BACK"
        android:textColor="#FFFFFF"
        app:iconTint="#FFFFFF"
        android:textSize="20sp"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/popupDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>






